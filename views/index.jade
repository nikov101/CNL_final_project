doctype html
html
	head
		title= title
		script(src='https://code.createjs.com/easeljs-0.8.2.min.js')
		script(src='https://code.createjs.com/tweenjs-0.6.2.min.js')
		script(src='https://cdn.jsdelivr.net/jquery/3.0.0/jquery.min.js')
		script(src='https://cdn.jsdelivr.net/semantic-ui/2.1.8/semantic.min.js')
		script(src='/socket.io/socket.io.js')
		script(src='/javascripts/game.js')
		link(rel='stylesheet', href='https://cdn.jsdelivr.net/semantic-ui/2.1.8/semantic.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body(onload='init()')
		canvas#canvas
		div#startMenu
			h1 Welcome to Bomb.io :)
			input#playerNameInput(type='text' autofocus placeholder='Enter your name here.' maxlength='20')
			h3 Press Enter to play
		div#statusPanel
			div.property
				div.propNameBox
					span.propName Max Bombs
					button.ui.inverted.teal.button.mini.icon
						i.icon.plus
				div.ui.teal.inverted.small.progress
					div.bar
			div.property
				div.propNameBox
					span.propName Power
					button.ui.inverted.red.button.mini.icon
						i.icon.plus
				div.ui.red.inverted.small.progress
					div.bar
			div.property
				div.propNameBox
					span.propName Speed
					button.ui.inverted.yellow.button.mini.icon
						i.icon.plus
				div.ui.yellow.inverted.small.progress
					div.bar